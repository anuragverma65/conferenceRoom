<div style="padding-left: 30%;padding-right: 40%">
<%= form_for :room, url: rooms_path do |f| %>
<p>
<h3>Enter the details to create a new room</h3>
</p>
  <p>
    <%= f.label :name%><br>
    <%= f.text_field :name, style: 'width:80%' %>
  </p>
 
  <p>
    <%= f.label :size %><br>
    <%= f.text_field :size, style: 'width:80%' %>
  </p>
 
  <p style="float: right">
    <%= f.submit "Save Room", class: "btn-success", style: 'height:30px' %>
    
  </p>
  <p>
  <%= link_to('Back', rooms_path, :class=>"btn btn-primary") %>
  </p>
  
<% end %>

</div>
