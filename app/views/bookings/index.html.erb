<table border=1 class="table-striped table-hover" style="width:80%;text-align:center">
  <tr style="text-align:center">
    <th>Room Booked</th>
    <th>Booking User</th>
    <th>Booking Duration</th>
  </tr>
 
  <% @bookings.each do |booking| %>
    <tr>
    <td><%= booking.room_id %> </td>
      <td><%= booking.user %> </td>

   <td><%= booking.start %> to <%= booking.end %></td>

    </tr>
  <% end %>
</table>
